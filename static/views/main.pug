div(id='mainContentWrapper')
  div(id='actionBar', class='actionBar')
    div(id='actionBarIdentifier')
      span(class='avatar')
        <i class="far fa-meh-blank"></i>
      span(id='username')= currentUser.fullname 
    div(class='user-action-wrapper')
      span(class='user-action' id='profileAction') <i class="fas fa-user"></i> PROFILE
    div(class='user-action-wrapper user-action-active')
      span(class='user-action' id='eventAction') <i class="far fa-calendar-alt"></i> EVENTS
    div(class='user-action-wrapper')
      span(class='user-action' id='materialAction') <i class="fas fa-book"></i> MATERIAL
    div(class='user-action-wrapper')
      span(class='user-action' id='networkAction') <i class="fab fa-hubspot"></i> NETWORK
  div(id='mainContent')
    div(class='container-fluid')
      div(class='row top-spacer')
      div(class='row')
        div(class='col col-lg-10 offset-lg-1')
          h4 Events
      div(class='row')
        if currentUser.complete && recommended!=null
          div(class='col col-lg-10 offset-lg-1')
            .row
              span Based on your profile, you may be interested in the following events:
            div(class='row')
              each event in recommended
                div(class='col col-lg-4')
                  div(class='card')
                    div(class='card-body')
                      h5(class='card-title')=event.type
                      div(class='card-text')
                        p(class='card-text-time') 2018/10/11
                        p=event.location
        if !currentUser.complete
          div(class='col col-lg-10 offset-lg-1')
            .row
              span Finish this <a href="#">Survey</a> to get recommendation list tailored to suit your needs. 
      div(class='row')
        div(class='col col-lg-10 offset-lg-1')
          div(class='row')
              each event in events
                div(class='col col-lg-4')
                  div(class='card')
                    div(class='card-body')
                      h5(class='card-title')=event.type
                      div(class='card-text')
                        p(class='card-text-time') 2018/10/11
                        p=event.location
      div(class='row')
      
