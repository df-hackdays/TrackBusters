              button(class='btn btn-primary float-right') <i class="fas fa-filter"></i>
      div(class='row')
        div(class='col col-lg-10 offset-lg-1')
          div(class='row')
              each event in events
                div(class='col col-lg-4')
                  div(class='card')
                    div(class='card-body')
                      h5(class='card-title')
